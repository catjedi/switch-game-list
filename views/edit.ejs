<%- include("partials/header") %>

<div class="container">
    <h1 style="text-align: center;">Edit: <%= game.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/gamelist/<%= game._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="game[name]" value="<%= game.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="game[image]" value="<%= game.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="game[description]" value="<%= game.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-large btn-block">Submit</button>
            </div>
        </form>
        <a href="/gamelist/">Go Back</a>

    </div>
</div>

<%- include("partials/footer") %>